@using EntityLayer.Concrete
@model BannerAdminViewModel
@{
    ViewData["Title"] = "Adim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
<form method="post" action="/AdminBanners/Update" id="updateForm">
    @foreach (var banner in Model.Banner)
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <input type="text" name="ID" value="@banner.ID" hidden />

                    <div class="col-md-12">
                        <h2>Resim 1:</h2>
                        <select name="Banner1" class="form-control">
                            <option value="">Seçiniz</option>
                            @foreach (var image in Model.Images)
                            {
                                @if (banner.Banner1 == image.Name)
                                {
                                    <option value="@image.ID" selected>@(image.Name)</option>
                                }
                                else
                                {
                                    <option value="@image.ID">@(image.Name)</option>
                                }
                            }
                        </select>
                        <h2>Resim 2:</h2>
                        <select name="Banner2" class="form-control">
                            <option value="">Seçiniz</option>
                            @foreach (var image in Model.Images)
                            {
                                @if (banner.Banner2 == image.Name)
                                {
                                    <option value="@image.ID" selected>@(image.Name)</option>
                                }
                                else
                                {
                                    <option value="@image.ID">@(image.Name)</option>
                                }
                            }
                        </select>
                        <h2>Resim 3:</h2>
                        <select name="Banner3" class="form-control">
                            <option value="">Seçiniz</option>
                            @foreach (var image in Model.Images)
                            {
                                @if (banner.Banner3 == image.Name)
                                {
                                    <option value="@image.ID" selected>@(image.Name)</option>
                                }
                                else
                                {
                                    <option value="@image.ID">@(image.Name)</option>
                                }
                            }
                        </select>
                    </div>
                    <br />
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Güncelle</button>
                </div>
            </div>
        </div>
    }
</form>

<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Onay</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu değişiklikleri kaydetmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="submit" form="updateForm" class="btn btn-primary">Evet, Kaydet</button>
            </div>
        </div>
    </div>
</div>