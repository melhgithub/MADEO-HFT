@model FooterProductsViewModel


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@foreach (var footer in Model.Footer)
{
    <div class="tech-btm">
        <h3 class="ourproducts">Our Products:</h3>
        <hr class="divider" />
        @foreach (var product in Model.Products)
        {
            <div class="card forproduct">
                <div class="col-md-5 blog-grid-left">
                    <a href="/Product/ProductPreviews?productID=@product.ID" class="footerproduct">
                        <img src="~/Resimler/@product.Image" class="img-fluid w-100" alt="" />
                    </a>
                </div>
                <div class="col-md-7 blog-grid-right">
                    <h5>
                        <a href="/Product/ProductPreviews?productID=@product.ID" class="footerproducttitle">
                            @product.Title
                        </a>
                    </h5>
                </div>
            </div>
            <br />
        }
    </div>
}